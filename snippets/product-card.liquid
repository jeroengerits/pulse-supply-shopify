{% comment %}
  Product Card Snippet
  
  Usage:
  {% render 'product-card', product: product %}
{% endcomment %}

<article>
  <a href="{{ product.url }}" class="rounded-xl bg-white border border-neutral-200 block overflow-hidden hover:shadow-sm transition-shadow duration-300">
    
    <!-- Product Image -->
    <div>
      {% if product.featured_image %}
        <img src="{{ product.featured_image | image_url: width: image_width, height: image_height, crop: 'center' }}"
             width="{{ image_width }}"
             height="{{ image_height }}"
             alt="{{ product.title | escape }}"
             loading="lazy"
             decoding="async">
      {% else %}
        <div>
          <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1"
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      {% endif %}
    </div>

    <!-- Product Info -->
    <div class="px-4 py-3">
      <div class="flex flex-row justify-between items-start">
        <div>
            <!-- Product Title -->
        <h3 class="text-md font-semibold">
            {{ product.title | escape }}
          </h3>


          <!-- Type -->
            <p class="text-sm text-neutral-400">{{ product.type | default: 'Unknown Type' }}</p>


        </div>

        <!-- Price -->
        <div class="flex flex-col items-end">
          <span class="text-base font-normal">
            {{ product.price | money }}
          </span>

        </div>
      </div>
    </div>
  </a>
</article>
