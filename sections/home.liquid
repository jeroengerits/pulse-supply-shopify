{% comment %}
  Home section - minimal clean display of all products with Inter font
{% endcomment %}

<div class="py-8 font-inter">
  <div class="px-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {% for product in collections.all.products %}
        <div>
          {% if product.featured_image %}
            <a href="{{ product.url }}">
              {% render 'image',
                image: product.featured_image,
                url: product.url,
                width: 400,
                height: 400,
                crop: 'center'
              %}
            </a>
          {% endif %}
          
          <div class="mt-2">
            <h3 class="font-medium text-gray-900">
              <a href="{{ product.url }}" class="hover:text-blue-600 transition-colors">{{ product.title }}</a>
            </h3>
            <p class="text-sm text-gray-600 font-medium">{{ product.price | money }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Home",
  "tag": "section",
  "class": "home",
  "settings": [],
  "presets": [
    {
      "name": "Home"
    }
  ]
}
{% endschema %}
