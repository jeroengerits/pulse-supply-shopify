{% doc %}
  @prompt
    collection section

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-section-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom:40px;
  }

  .ai-collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-collection-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    max-width: 600px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-collection-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-collection-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .ai-collection-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-collection-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-collection-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-collection-card-{{ ai_gen_id }}:hover .ai-collection-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collection-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-card-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-collection-card-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 8px;
  }

  .ai-collection-card-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.card_text_color }};
    margin: 0 0 12px;
    line-height: 1.4;
  }

  .ai-collection-card-count-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.card_text_color }};
    opacity: 0.7;
  }

  .ai-collection-view-all-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 40px;
  }

  .ai-collection-view-all-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-collection-view-all-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-collection-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-collection-empty-state-{{ ai_gen_id }} h3 {
    margin: 0 0 8px;
    font-size: 18px;
  }

  .ai-collection-empty-state-{{ ai_gen_id }} p {
    margin: 0;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: 16px;
    }

    .ai-collection-header-{{ ai_gen_id }} {
      margin-bottom: 24px;
    }

    .ai-collection-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-collection-card-content-{{ ai_gen_id }} {
      padding: 16px;
    }
  }
{% endstyle %}<div class="ai-collection-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-collection-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-collection-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-collection-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.featured_collections != blank %}
      <div class="ai-collection-grid-{{ ai_gen_id }}">
        {% for collection in block.settings.featured_collections limit: block.settings.collections_to_show %}
          <a href="{{ collection.url }}" class="ai-collection-card-{{ ai_gen_id }}">
            <div class="ai-collection-image-wrapper-{{ ai_gen_id }}">
              {% if collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 600}}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="ai-collection-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="{{600 | divided_by: block.settings.image_aspect_ratio }}"
                >
              {% else %}
                <div class="ai-collection-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-collection-card-content-{{ ai_gen_id }}">
              <h3 class="ai-collection-card-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
              {% if collection.description != blank and block.settings.show_description %}
                <p class="ai-collection-card-description-{{ ai_gen_id }}">
                  {{ collection.description | strip_html | truncate: 100 }}
                </p>
              {% endif %}
              {% if block.settings.show_product_count %}
                <p class="ai-collection-card-count-{{ ai_gen_id }}">
                  {{ collection.products_count }}{% if collection.products_count == 1 %}
                    product
                  {% else %}
                    products
                  {% endif %}
                </p>
              {% endif %}
            </div>
          </a>
        {% endfor %}
      </div>

      {% if block.settings.show_view_all and block.settings.view_all_url != blank %}
        <div class="ai-collection-view-all-{{ ai_gen_id }}">
          <a href="{{ block.settings.view_all_url }}" class="ai-collection-view-all-button-{{ ai_gen_id }}">
            {{ block.settings.view_all_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-collection-empty-state-{{ ai_gen_id }}">
        <h3>No collections selected</h3>
        <p>Add collections to display them here</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Collection showcase",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by collection"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover our curated collections</p>"
